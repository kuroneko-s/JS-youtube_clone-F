extends base

block content
    if errorMessage
        p=errorMessage  
    form(method="POST")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password", type="password", required, placeholder="Passowrd")
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr
    div 
        span Don't have an account?
        br
        a(href="/join") Create in now &rarr;