extends base

block content
    if errorMessage
        p.errorMessage=errorMessage  
    form(method="POST").edit-profile__form
        input(name="name", type="text", required, placeholder="Name")
        input(name="email", type="email", required, placeholder="Emial")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password1", type="password", required, placeholder="Passowrd")
        input(name="password2", type="password", required, placeholder="Confirm Passowrd")
        input(name="location", type="text", required, placeholder="Location")
        button
            |   Join
    hr
    div.social__div
        span Already have an account?
        br
        a(href="/login")
            span.fab.fa-github-square.git__logo
            |   Log in now &rarr;